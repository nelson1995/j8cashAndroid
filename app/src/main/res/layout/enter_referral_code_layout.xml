<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:background="@color/colorWhite"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/main_margin"
    android:layout_height="match_parent">


        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/love"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/link_edit_photo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/main_margin"
            fontPath="@string/font_path_bold"
            android:text="Enter the invite code below if someone invited you to J8Cash."
            android:textSize="@dimen/text_medium"
            android:gravity="center"
            android:textColor="@color/colorDark"/>
    <EditText
        android:id="@+id/edit_text_invite_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:hint=""
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/bg_edit_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">
        <Button
            android:id="@+id/btn_cancel_referral_code"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_white"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="4dp"/>
        <Button
            android:id="@+id/btn_confirm_referral_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>