<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/screenLight"
    android:layout_height="match_parent"
    tools:context=".PaymentMethodsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/toolbar_elevation"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/main_margin"
        android:paddingBottom="@dimen/main_margin"
        android:paddingLeft="@dimen/main_margin">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="@color/colorWhite"
            android:id="@+id/btn_ugmobilemoney"
            android:layout_marginTop="@dimen/main_margin"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:layout_height="40dp"
                    android:src="@drawable/ugmobilemoney"
                    android:padding="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uganda Mobile Money"
                        android:textSize="16sp"
                        fontPath="@string/font_path_bold"
                        android:textColor="@color/colorDark"
                        />

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Accepts MTN Mobile Money and Airtel Money"-->
<!--                        android:textSize="12sp"-->
<!--                        fontPath="@string/font_path_itallic"-->
<!--                        />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="@color/colorWhite"
            app:cardElevation="0dp"
            android:id="@+id/btn_mpesa"
            android:layout_marginTop="@dimen/main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mpesa"
                    android:scaleType="centerCrop"
                    android:padding="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MPESA Kenya"
                        android:textSize="16sp"
                        fontPath="@string/font_path_bold"
                        android:textColor="@color/colorDark"/>

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Accepts Visa Card, MasterCard and American Express"-->
                    <!--                        android:textSize="12sp"-->
                    <!--                        fontPath="@string/font_path_itallic"-->
                    <!--                        />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="@color/colorWhite"
            app:cardElevation="0dp"
            android:id="@+id/btn_rw_mobile_money"
            android:layout_marginTop="@dimen/main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ugmobilemoney"
                    android:scaleType="centerCrop"
                    android:padding="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rwanda Mobile Money"
                        android:textSize="16sp"
                        fontPath="@string/font_path_bold"
                        android:textColor="@color/colorDark"/>

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Accepts Visa Card, MasterCard and American Express"-->
<!--                        android:textSize="12sp"-->
<!--                        fontPath="@string/font_path_itallic"-->
<!--                        />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="@color/colorWhite"
            app:cardElevation="0dp"
            android:id="@+id/btn_zambia_mobile_money"
            android:layout_marginTop="@dimen/main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mobile_money"
                    android:tint="@color/colorAccent"
                    android:background="@color/screenLight"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zambia Mobile Money"
                        android:textSize="16sp"
                        fontPath="@string/font_path_bold"
                        android:textColor="@color/colorDark"/>

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Accepts Visa Card, MasterCard and American Express"-->
                    <!--                        android:textSize="12sp"-->
                    <!--                        fontPath="@string/font_path_itallic"-->
                    <!--                        />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:background="@color/colorWhite"
            app:cardElevation="0dp"
            android:id="@+id/btn_card"
            android:layout_marginTop="@dimen/main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/card"
                    android:scaleType="centerCrop"
                    android:padding="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Payment"
                        android:textSize="16sp"
                        fontPath="@string/font_path_bold"
                        android:textColor="@color/colorDark"
                        />

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Accepts Visa Card, MasterCard and American Express"-->
<!--                        android:textSize="12sp"-->
<!--                        fontPath="@string/font_path_itallic"-->
<!--                        />-->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDark"
        android:layout_alignParentBottom="true"
        android:text="Your transaction is secured via Flutterwave \n Official partner of J8Cash"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"/>

    </RelativeLayout>


</LinearLayout>