<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

    </style>

    <!--    <style name="AppTheme.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!--    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">-->
<!--        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>-->
<!--    </style>-->

    <style name="tabLayoutStyle2" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#607d8b</item>
    </style>

    <style name="otpHeaderStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="pinHeaderStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="otpBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="pinButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="svdCardsBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_btn_curved</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="payBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/orange_button_curved</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="paymentTileStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="paymentTileTextStyle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="paymentTileDividerStyle">
        <item name="android:background">#ffffff</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="otpHeaderStyle2">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="pinHeaderStyle2">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="otpBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved_2</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="svdCardsBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="payBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rave_pay_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>


    <style name="RaveCustomTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle2</item>
        <item name="PayButtonStyle">@style/payBtnStyle2</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle2</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle2</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle2</item>
        <item name="PaymentTileStyle">@style/paymentTileStyle</item>
        <item name="PaymentTileTextStyle">@style/paymentTileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/paymentTileDividerStyle</item>
    </style>
</resources>
